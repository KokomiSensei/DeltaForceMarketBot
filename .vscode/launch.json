{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: api",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/bot/api.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: api reload",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/bot/api.py",
            "args": [
                "--reload"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: web",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/web/streamlitUI.py",
            "console": "integratedTerminal"
        }
    ]
}